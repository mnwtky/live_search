<div class="container">
  <h5 class="article-title">検索結果一覧</h5>
  <div class="row">
    <% if @results.length !=0 %>
      <% @results.each do |result| %>
        <div class="card-group col-md-6 col-lg-3">
          <%= link_to event_path(result.id), class: "article-link" do%>
          <span class="article-info"><%= result.genre.name %></span>
          <div class="card articles-chart">
            <%= image_tag result.image, class:"card-img-top" if result.image.attached?  %>
            <div class="card-body">
              <h5 class="card-title"><%= result.title %></h5>
              <p class="card-text"><%= result.info.truncate(30) %></p>
            </div>
          </div>
          <% end %>
        </div>
      <% end %>
    <% else %>
      <h5 class="alert">該当する投稿はありません！</h5>
    <% end %>
  </div>
</div>
<div class="container text-center">
  <p class="paginate">
    <%# <%= paginate @results %> %>
    <%= link_to 'トップページへ戻る', root_path %>
  </p>
</div>